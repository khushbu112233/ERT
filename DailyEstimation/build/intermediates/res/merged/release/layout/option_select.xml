<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <!-- android:background="@drawable/bottom_bg_light" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/dialog_bg"
        android:orientation="vertical" >

        <com.customeview.TitleTextView
            android:id="@+id/optionHead"
            style="@style/button_selection_field_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Option"
            android:textColor="@color/title_text_color" />

        <com.customeview.NormalTextView
            android:id="@+id/optionEdit"
            style="@style/title_text_field_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="@dimen/field_gap"
            android:text="Update"
            android:textColor="@color/white" />

        <View style="@style/horizontal_line" />

        <com.customeview.NormalTextView
            android:id="@+id/optionDelete"
            style="@style/title_text_field_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="@dimen/field_gap"
            android:text="Delete"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>