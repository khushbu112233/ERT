<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:padding="5dp"
        android:scrollbars="none"
        android:weightSum="@integer/dashboard_partition">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_address_book"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_address_selector"
                        android:text="@string/dashboard_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtCategory"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_category_selector"
                        android:text="@string/dashboard_category" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtReceipt"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_receipt_selector"
                        android:text="@string/dashboard_receipt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtReport"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_report_selector"
                        android:text="@string/dashboard_reports" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtProfile"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_profile_selector"
                        android:text="@string/dashboard_profile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtChangePwd"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_change_password_selector"
                        android:text="@string/dashboard_change_password" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtUpgrade"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_upgrade_selector"
                        android:text="@string/dashboard_subscriptions" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtCamera"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_camera_tip_selector"
                        android:text="@string/dashboard_camera" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtLogout"
                        style="@style/dashboad_text_field_style"
                        android:drawableTop="@drawable/dashboard_logout_selector"
                        android:text="@string/dashboard_logout" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!--<ImageView
                        android:id="@+id/fbConnect"
                        android:layout_width="100dp"
                        android:layout_height="33dp"
                        android:background="@color/white"
                        android:src="@drawable/facebook_connect" />-->

                    <ImageView
                        android:id="@+id/fbConnect"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/field_gap"
                        android:background="@drawable/fb_bg"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebook_connect" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtiTimePunchImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/i_time_punch"
                        android:gravity="center_horizontal" />

                    <com.customeview.CustomTextView
                        android:id="@+id/dashboard_txtiTimePunch"
                        style="@style/dashboad_text_field_style"
                        android:height="60dp"
                        android:text="@string/dashboard_i_time_punch" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/adView"
                android:orientation="vertical">

                <View
                    style="@style/horizontal_line"
                    android:layout_marginTop="@dimen/field_left_right_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/field_gap_small">

                    <com.customeview.NormalTextView
                        android:id="@+id/Link"
                        style="@style/text_field_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/msg_dashboard_1" />

                    <com.customeview.NormalTextView
                        style="@style/text_field_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/msg_dashboard_2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

</RelativeLayout>